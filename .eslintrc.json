{
	"rules": {
		"indent": [1, "tab", { "SwitchCase": 1 }],
		"quotes": [
			2, "single"
		],
		"semi": [
			2, "always"
		],
		"no-console": 0,
		"no-unused-vars": 1,
		"space-unary-ops": [
			2, {
				"words": true,
				"nonwords": false
		}]
	},
	"env": {
		"node": true,
		"mocha": true,
		"browser": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 6
	},
	"extends": "eslint:recommended"
}
